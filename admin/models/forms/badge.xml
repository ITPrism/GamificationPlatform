<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="title" type="text" class="inputbox" 
			label="COM_GAMIFICATION_TITLE"
			description="COM_GAMIFICATION_BADGE_TITLE_DESC"
			size="40"   
			filter="trim" 
			required="true" />

        <field name="points" type="text" class="inputbox" 
            label="COM_GAMIFICATION_POINTS"
            description="COM_GAMIFICATION_BADGE_POINTS_DESC"
            filter="int" 
            required="true"
        />
        
        <field name="points_type" type="gfypoints" class="inputbox" 
            label="COM_GAMIFICATION_POINTS_TYPE"
            description="COM_GAMIFICATION_BADGE_POINTS_TYPE_DESC"
            filter="int" 
            required="true"
        />
        
        <field name="image" type="file" class="inputbox" 
            label="COM_GAMIFICATION_IMAGE"
            description="COM_GAMIFICATION_BADGE_IMAGE_DESC"
        />
            
        <field name="group_id" type="gfygroups" class="inputbox" 
            label="COM_GAMIFICATION_GROUP" 
            description="COM_GAMIFICATION_BADGE_GROUP_DESC" 
            size="1" 
            filter="intval" 
            default="1"
        />
        
		<field name="published" type="list" class="inputbox" 
		    label="JSTATUS" 
            description="JFIELD_PUBLISHED_DESC" 
            size="1" 
            filter="intval" 
            default="1"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
		
		<field name="id" type="text" class="readonly"
		  label="JGLOBAL_FIELD_ID_LABEL"
		  description="JGLOBAL_FIELD_ID_DESC" 
          readonly="true" 
          default="0" 
        />
            
	</fieldset>
</form>