<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="user" method="upgrade">
    <name>PLG_USER_GAMIFICATION</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2014 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.3</version>
    <creationDate>30 May, 2014</creationDate>
    <description><![CDATA[
    <p>User - Gamification is an extension that gives units to users after registration, login, logout,...</p>
    <p>Invest in the extension improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/e-commerce/credits-a-point-systems/23872" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <files>
        <filename plugin="gamification">gamification.php</filename>
        <filename>index.html</filename>

        <folder>language</folder>
    </files>
    
    <help url="PLG_USER_GAMIFICATION_HELP_URL" />
    
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_gamification/models/fields">
                <field name="points_give" type="radio" default="0" label="PLG_USER_GAMIFICATION_GIVE_POINTS" description="PLG_USER_GAMIFICATION_GIVE_POINTS_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="points_types" type="gfypointstypes" label="PLG_USER_GAMIFICATION_TYPES" description="PLG_USER_GAMIFICATION_TYPES_DESC" />
            </fieldset>
            <fieldset name="integration" label="PLG_USER_GAMIFICATION_INTEGRATION">
                <field name="notification_integration" type="list" default="" label="PLG_USER_GAMIFICATION_NOTIFICATION_INTEGRATION" description="PLG_USER_GAMIFICATION_NOTIFICATION_INTEGRATION_DESC">
                    <option value="">PLG_USER_GAMIFICATION_NONE</option>
                    <option value="gamification">PLG_USER_GAMIFICATION_GAMIFICATION_PLATFORM</option>
                    <option value="socialcommunity">PLG_USER_GAMIFICATION_SOCIAL_COMMUNITY</option>
                    <option value="jomsocial">PLG_USER_GAMIFICATION_JOM_SOCIAL</option>
                </field>
                <field name="activity_integration" type="list" default="" label="PLG_USER_GAMIFICATION_ACTIVITY_INTEGRATION" description="PLG_USER_GAMIFICATION_ACTIVITY_INTEGRATION_DESC">
                    <option value="">PLG_USER_GAMIFICATION_NONE</option>
                    <option value="gamification">PLG_USER_GAMIFICATION_GAMIFICATION_PLATFORM</option>
                    <option value="socialcommunity">PLG_USER_GAMIFICATION_SOCIAL_COMMUNITY</option>
                    <option value="jomsocial">PLG_USER_GAMIFICATION_JOM_SOCIAL</option>
                </field>
            </fieldset>
        </fields>
    </config>
    
</extension>
