<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_GAMIFICATION</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2013 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.2</version>
    <creationDate>18 October, 2013</creationDate>
	<description><![CDATA[
    <p>System - Gamification is a plugin that updates some gamification mechanics of the user. This plugin updates levels, badges, ranks,...</p>
    <p>Invest in the extension and help for its improvement. You can <a href="http://itprism.com/sponsorship" target="_blank">sponsor the extension via SMS, PayPal or Bitcoin</a>.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/e-commerce/credits-a-point-systems/23872" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
	
	<languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_gamification.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_gamification.sys.ini</language>
    </languages> 
	
	<files>
		<filename plugin="gamification">gamification.php</filename>
		<filename>index.html</filename>
	</files>
	
	<help url="PLG_SYSTEM_GAMIFICATION_HELP_URL" />
		
	<config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_gamification/models/fields">
                <field name="points" type="gfypoints" 
                    label="PLG_SYSTEM_GAMIFICATION_POINTS" 
                    description="PLG_SYSTEM_GAMIFICATION_POINTS_DESC" 
                    display_root="0" />
                
                <field name="enable_leveling" type="radio" default="0" label="PLG_SYSTEM_GAMIFICATION_ENABLE_LEVELING" description="PLG_SYSTEM_GAMIFICATION_ENABLE_LEVELING_DESC" class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                
                <field name="enable_ranking" type="radio" default="0" label="PLG_SYSTEM_GAMIFICATION_ENABLE_RANKING" description="PLG_SYSTEM_GAMIFICATION_ENABLE_RANKING_DESC" class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                
                <field name="enable_badging" type="radio" default="0" label="PLG_SYSTEM_GAMIFICATION_ENABLE_BADGING" description="PLG_SYSTEM_GAMIFICATION_ENABLE_BADGING_DESC" class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
                
            </fieldset>
            
            <fieldset name="integration" label="PLG_SYSTEM_GAMIFICATION_INTEGRATION">
                <field name="notification_integration" type="list" default="" label="PLG_SYSTEM_GAMIFICATION_NOTIFICATION_INTEGRATION" description="PLG_SYSTEM_GAMIFICATION_NOTIFICATION_INTEGRATION_DESC">
                    <option value="">PLG_SYSTEM_GAMIFICATION_NONE</option>
                    <option value="gamification">PLG_SYSTEM_GAMIFICATION_GAMIFICATION_PLATFORM</option>
                    <option value="socialcommunity">PLG_SYSTEM_GAMIFICATION_SOCIAL_COMMUNITY</option>
                    <option value="jomsocial">PLG_SYSTEM_GAMIFICATION_JOM_SOCIAL</option>
                </field>
                <field name="activity_integration" type="list" default="" label="PLG_SYSTEM_GAMIFICATION_ACTIVITY_INTEGRATION" description="PLG_SYSTEM_GAMIFICATION_ACTIVITY_INTEGRATION_DESC">
                    <option value="">PLG_SYSTEM_GAMIFICATION_NONE</option>
                    <option value="gamification">PLG_SYSTEM_GAMIFICATION_GAMIFICATION_PLATFORM</option>
                    <option value="socialcommunity">PLG_SYSTEM_GAMIFICATION_SOCIAL_COMMUNITY</option>
                    <option value="jomsocial">PLG_SYSTEM_GAMIFICATION_JOM_SOCIAL</option>
                </field>
            </fieldset>
            
        </fields>
    </config>
    
</extension>
